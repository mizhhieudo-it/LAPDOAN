@model DATNwebtintuc.Models.ModelEntity.Category
@{
    ViewBag.Title = "Viewupdate";
    Layout = "~/Views/Shared/_AdminLTE3.cshtml";
    var validate = ViewData["checkvalidatecategory"] as List<FluentValidation.Results.ValidationFailure>;
}

@if (validate != null)
{
    foreach (var item in validate)
    {
        <div style="position: absolute; top: 110px; right: 0;">
            <div class="toast" id="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-warning">
                    <img src="https://img.lovepik.com/element/40120/8183.png_860.png" height="20px" width="30px" class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Warning</strong>
                    <span aria-hidden="true">&times;</span>

                </div>
                <div class="toast-body bg-light">
                    @item.ErrorMessage
                </div>
            </div>
        </div>
    }
}

<form action="/Category/Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="formGroupExampleInput" hidden>Mã Thể Loại</label>
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="nhập mã thể loại" name="IDcategory"readonly hidden value="@Model.IDcategory">
        <label for="formGroupExampleInput">Tên Thể Loại</label>
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="nhập tên thể loại" name="namecategory" value="@Model.namecategory">
        <button type="submit" class="btn-danger" onclick="clickk()" style="margin-left:50%;margin-top:10px">Tạo</button>
    </div>
</form>


<script>
    const getToast = document.getElementById("toast");
    const Toast = new bootstrap.Toast(getToast);
    Toast.show();
    Toast._config.delay = 7000;
</script>

